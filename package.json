{
  "name": "@v-factor/monorepo",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{json,md,css,html}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint",
      "prettier --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.18",
    "concurrently": "^4.1.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lerna": "^3.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.2"
  }
}
