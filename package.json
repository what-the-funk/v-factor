{
  "name": "mono",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{json,md,css,html}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint",
      "prettier --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "devDependencies": {
    "eslint": "^5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.2.0",
    "lerna": "^3.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  }
}
