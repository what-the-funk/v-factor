{
  "name": "@v-factor/server",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/app.js",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "lint": "npm-run-all --parallel lint:src",
    "lint:src": "tslint --fix",
    "prebuild": "yarn clean",
    "start": "node dist",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "helmet": "^3.15.1",
    "mongoose": "^5.4.15"
  },
  "private": true,
  "publishConfig": {
    "access": "public"
  }
}
